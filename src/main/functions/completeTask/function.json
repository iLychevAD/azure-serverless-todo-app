{
  "bindings": [
    {
      "authLevel": "anonymous",
      "type": "httpTrigger",
      "direction": "in",
      "name": "req",
      "methods": [
        "post"
      ],
      "route": "tasks/{id}/complete"
    },
    {
      "type": "http",
      "direction": "out",
      "name": "res"
    },
    {
      "type": "cosmosDB",
      "direction": "in",
      "name": "taskToComplete",
      "databaseName": "%DB_NAME%",
      "collectionName": "todo-tasks",
      "id": "{id}",
      "connectionStringSetting": "holitodoappdb_DOCUMENTDB"
    },
    {
      "type": "cosmosDB",
      "direction": "out",
      "name": "completedTask",
      "databaseName": "%DB_NAME%",
      "collectionName": "todo-tasks",
      "createIfNotExists": "false",
      "connectionStringSetting": "holitodoappdb_DOCUMENTDB"
    },
    {
      "type": "signalR",
      "name": "signalRMessages",
      "hubName": "todoApp",
      "direction": "out"
    }
  ],
  "scriptFile": "../dist/completeTask/index.js"
}
